@model ExampleModel 
@{ 
    ViewData["Title"] = "Contact"; 
}

<form class="post-example" asp-controller="Home" asp-action="PostExample" method="POST">
    <div class="form-group">
        <label asp-for="Name">User Name</label>
        <input asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Age">User Age</label>
        <input asp-for="Age" class="form-control" />
    </div>
    <input type="submit" value="Save" name="save" class="btn btn-default"/>
</form>